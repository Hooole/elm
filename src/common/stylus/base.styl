html,body
  line-height:1
  font-weight:200
  font-family :'PingFang SC','STHeitiSC-Light','arial','sans-serif'
.clearfix
  display :inline-block
  &:after
    display :block
    content:" "
    clear:both
@media (min-device-pixel-ratio: 1.5),(-webkit-max-device-pixel-ratio: 1.5)
  .border-1px
    &::after
      -webkit-transform : scaleY(0.7)
      transform :scaleY(0.7)
@media (min-device-pixel-ratio: 2),(-webkit-max-device-pixel-ratio: 2)
  .border-1px
    &::after
      -webkit-transform : scaleY(0.5)
      transform :scaleY(0.5)
